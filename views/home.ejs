  <div class="container">
    <div class="row mt-5">
      <div class="col-6">

        <div class="mt-5 home-upload">
          <h1>Upload an Interview Question</h1>

          <form action="/post/createPost" enctype="multipart/form-data" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">
                Job Title
              </label>
              <select name="title" id="title">
                <option selected disabled>Choose a Job</option>
                <option value="Cashier">Cashier</option>
                <option value="SoftwareEngineering">Software Engineering</option>
                <option value="AcademicAdvisor">Academic Advisor</option>


              </select>
              
            </div>
            <div class="mb-3">
              <label for="question" class="form-label">Job Question</label>
              <textarea class="form-control" id="question" name="question"></textarea>
            </div>
            <div class="mb-3">
              <label for="imgUpload" class="form-label">Audio File</label>
              <input type="file" class="form-control" id="audioUpload" name="file">
            </div>
            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          </form>
        </div>
      </div>

      <div class="col-6">
        <br>
        <br>
        <h1>Save & Edit your files</h1>
        <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <a href="/post/<%= posts[i]._id%>">
                <%= posts[i].title %>: <%= posts[i].question %>
              </a>

            </li>
            <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="home-btn" href="/projects">Your Projects</a> 
          <a class="home-btn" href="/startnew">Click Here to see Questionnaire</a>
        </div>
        <div class="row justify-content-center mt-5">

        </div>
      </div>
    </div>
